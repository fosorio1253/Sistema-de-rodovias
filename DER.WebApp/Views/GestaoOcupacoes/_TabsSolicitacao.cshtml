@model DER.WebApp.ViewModels.GestaoOcupacoes.GestaoOcupacoesViewModel
@{
    ViewBag.Title = "SGFD - Cadastro de Ocupações";
}
<div class="row center-block">
    <br />
    <div class="col-md-12">
        <div class="card card-primary card-tabs">
            <div class="card-header p-0 pt-1">
                <ul class="nav nav-tabs" id="gestao-ocupacao-tab@{@ViewBag.id}" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link" id="gestao-ocupacao-ocupacao-tab@{@ViewBag.id}" data-toggle="pill" href="#gestao-ocupacao-ocupacao@{@ViewBag.id}" role="tab" aria-controls="gestao-ocupacao-ocupacao@{@ViewBag.id}" aria-selected="false">Ocupação *</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" id="gestao-ocupacao-trecho-tab@{@ViewBag.id}" data-toggle="pill" href="#gestao-ocupacao-trecho@{@ViewBag.id}" role="tab" aria-controls="gestao-ocupacao-trecho@{@ViewBag.id}" aria-selected="false">Trecho Solicitado *</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="gestao-ocupacao-documentos-tab@{@ViewBag.id}" data-toggle="pill" href="#gestao-ocupacao-documentos@{@ViewBag.id}" role="tab" aria-controls="gestao-ocupacao-documentos@{@ViewBag.id}" aria-selected="false">Documentos *</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="gestao-ocupacao-tep-tab@{@ViewBag.id}" data-toggle="pill" href="#gestao-ocupacao-tep@{@ViewBag.id}" role="tab" aria-controls="gestao-ocupacao-tep@{@ViewBag.id}" aria-selected="false">PEP</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" id="gestao-ocupacao-ocorrencias-tab@{@ViewBag.id}" data-toggle="pill" href="#gestao-ocupacao-ocorrencias@{@ViewBag.id}" role="tab" aria-controls="gestao-ocupacao-ocorrencias@{@ViewBag.id}" aria-selected="false">Ocorrências</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="gestao-ocupacao-parecer-tab@{@ViewBag.id}" data-toggle="pill" href="#gestao-ocupacao-parecer@{@ViewBag.id}" role="tab" aria-controls="gestao-ocupacao-parecer@{@ViewBag.id}" aria-selected="false">Parecer</a>
                    </li>
                    @if(ViewBag.IsUsuarioAdm)
                    {
                    <li class="nav-item">
                        <a class="nav-link" id="gestao-ocupacao-notificacao-tab@{@ViewBag.id}" data-toggle="pill" href="#gestao-ocupacao-notificacao@{@ViewBag.id}" role="tab" aria-controls="gestao-ocupacao-notificacao@{@ViewBag.id}" aria-selected="false">Notificações</a>
                    </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" id="gestao-ocupacao-deferimento-tab@{@ViewBag.id}" data-toggle="pill" href="#gestao-ocupacao-deferimento@{@ViewBag.id}" role="tab" aria-controls="gestao-ocupacao-deferimento@{@ViewBag.id}" aria-selected="false">Deferimento</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="gestao-ocupacao-remuneracao-tab@{@ViewBag.id}" data-toggle="pill" href="#gestao-ocupacao-remuneracao@{@ViewBag.id}" role="tab" aria-controls="gestao-ocupacao-remuneracao@{@ViewBag.id}" aria-selected="false">Remuneração</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="gestao-ocupacao-tabContent@{@ViewBag.id}">
                    <br />


                    @{
                        if(ViewBag.IsUsuarioAdm)
                        {
                        @Html.Partial(
                             "_TabNotificacao",
                             new ViewDataDictionary(this.Vi‌​ewData) {
                               {
                                 "idInterno", @ViewBag.id
                               }
                             }
                           );
                        }

                        @Html.Partial(
                        "_TabParecer",
                        new ViewDataDictionary(this.Vi‌​ewData) {
                          {
                            "idInterno", @ViewBag.id
                          }
                        }
                      );
                    }


                    @{
                        @Html.Partial(
                         "_TabGestaoOcupacao",
                         new ViewDataDictionary(this.Vi‌​ewData) {
                           {
                             "idInterno", @ViewBag.id
                           },
                             {
                                 "origemInterna" ,@ViewBag.origem
                             }
                         }
                       );
                    }


                    @{

                        @Html.Partial(
                        "_TabOcorrencia",
                        new ViewDataDictionary(this.Vi‌​ewData) {
                          {
                            "idInterno", @ViewBag.id
                          }
                        }
                      );
                    }

                    @{

                        @Html.Partial(
                        "_TabTrecho",
                        new ViewDataDictionary(this.Vi‌​ewData) {
                          {
                            "idInterno", @ViewBag.id
                          }
                        }
                      );
                    }

                    @{

                        @Html.Partial(
                        "_TabTep",
                        new ViewDataDictionary(this.Vi‌​ewData) {
                          {
                            "idInterno", @ViewBag.id
                          }
                        }
                      );
                    }

                    @{

                        @Html.Partial(
                        "_TabDocumentos",
                        new ViewDataDictionary(this.Vi‌​ewData) {
                          {
                            "idInterno", @ViewBag.id
                          }
                        }
                      );
                    }

                    @{

                        @Html.Partial(
                        "_TabDeferimento",
                        new ViewDataDictionary(this.Vi‌​ewData) {
                          {
                            "idInterno", @ViewBag.id
                          },
                            {
                            "origemInterno", @ViewBag.origem
                          }
                        }
                      );
                    }

                    @{
                        @Html.Partial(
                        "_TabRemuneracao",
                        new ViewDataDictionary(this.Vi‌​ewData) {
                          {
                            "idInterno", @ViewBag.id
                          }
                        }
                      );
                    }
                </div>
            </div>
        </div>
    </div>
</div>